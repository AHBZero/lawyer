<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
             xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="primary" transaction-type="JTA">
        <jta-data-source>java:jboss/postgresDS</jta-data-source>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>br.com.lawyer.core.entity.Usuario</class>

        <class>br.com.lawyer.core.entity.Advogado</class>
        <class>br.com.lawyer.core.entity.AreaAtuacao</class>
        <class>br.com.lawyer.core.entity.Assunto</class>
        <class>br.com.lawyer.core.entity.Atividade</class>
        <class>br.com.lawyer.core.entity.Contrato</class>
        <class>br.com.lawyer.core.entity.ConvencaoHonorarios</class>
        <class>br.com.lawyer.core.entity.Documento</class>
        <class>br.com.lawyer.core.entity.Empresa</class>
        <class>br.com.lawyer.core.entity.Orgao</class>
        <class>br.com.lawyer.core.entity.Pessoa</class>
        <class>br.com.lawyer.core.entity.Responsavel</class>
        <class>br.com.lawyer.core.entity.Setor</class>

        <class>br.com.lawyer.core.entity.common.Estado</class>
        <class>br.com.lawyer.core.entity.common.Municipio</class>
        <class>br.com.lawyer.core.entity.common.Pais</class>

        <properties>
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgresPlusDialect"/>
            <property name="hibernate.archive.autodetection" value="class, hbm"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.jdbc.batch_size" value="20"/>
            <property name="hibernate.transaction.manager_lookup_class"
                      value="org.hibernate.transaction.JBossTransactionManagerLookup"/>
        </properties>
    </persistence-unit>
</persistence>