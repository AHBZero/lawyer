<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         metadata-complete="false">


    <!-- Declara onde o Spring vai encontrar o carquivo de configuração para mapear as URLs e serviços quando a aplicação for inicializada. -->
    <servlet>
        <servlet-name>appServlet</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>
                WEB-INF/spring-context-web.xml
            </param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- Mapeamento de qual URL o Spring vai responder -->
    <servlet-mapping>
        <servlet-name>appServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- Listener da Servlet que o Spring usa para o mapeamento de endpoints-->
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            WEB-INF/spring-context-web.xml
        </param-value>
    </context-param>

    <!-- Filter do Spring security-->
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>

    <!-- Mapeamento da URL que o Spring security passa a monitorar -->
    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Redirecionamentos de erros para as exceções HTTP comuns.
         Não inclui o mapeamento de exceções que a aplicação lança. Isso é feito na ExceptionHandlerController com a anotação @ControllerAdvice -->
    <error-page>
        <error-code>404</error-code>
        <location>/errors/redirect/404</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/errors/redirect/401</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/errors/redirect/403</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/errors/redirect/405</location>
    </error-page>
    <error-page>
        <error-code>415</error-code>
        <location>/errors/redirect/415</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/errors/redirect/400</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/errors/redirect/500</location>
    </error-page>

	<session-config>
		<session-timeout>60</session-timeout>
	</session-config>
</web-app>

